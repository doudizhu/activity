.title1
  %span(style="font-size:40px;" )
    活动通
  %span(style="position:absolute;right:60px;" )
    你好,管理员
    %a
      =link_to '退出',{:controller => 'login',:action => 'quit'}

.breadcrumb1
  =link_to '首页',{:controller => 'login',:action => 'home_page'}
  %span(style="color:grey" )
    ='/'
    修改用户密码

%div.login-box

  =form_for :user , url:'change_password', method:'post' do |f|
    .input-group.wh100
      = f.label :'帐号', :class => 'input-group-addon wh20'
      = f.text_field :forgot_pw_question ,:class => 'form-control',:placeholder =>@change_pw_user_name, :disabled =>"disabled"

    .input-group.mt15.wh100
      = f.label :'请设置密码', :class => 'input-group-addon wh20'
      = f.text_field :password, :type=>"password",:class => 'form-control',:placeholder => '请输入新密码'

    .input-group.mt15.wh100
      = f.label :'请确认密码' , :class => 'input-group-addon wh20'
      = f.text_field  :password_confirmation, :type=>"password", :class => 'form-control',:placeholder => '请再次输入'

    .btn-danger.active.mt15
      = flash.now[:notice]

    %div.mt15(style="text-align:center;" )
      = f.submit "确认修改", class: "btn btn-default", style:'width:150px'
